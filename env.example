# Arquivo de variáveis de ambiente
# Copie este arquivo para .env e configure as variáveis

# Banco de dados
DB_NAME=myapp
DB_USER=postgres
DB_PASSWORD=secure_password_change_this
DB_HOST=database
DB_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# Aplicação
NODE_ENV=production
PORT=3000
JWT_SECRET=your_jwt_secret_change_this
SESSION_SECRET=your_session_secret_change_this

# Domínio e CORS
# Opção 1: Usar IP do servidor (mais simples)
DOMAIN=SEU_IP_DO_VPS
ALLOWED_ORIGINS=http://SEU_IP_DO_VPS,https://SEU_IP_DO_VPS

# Opção 2: Usar domínio próprio
# DOMAIN=meusite.com
# ALLOWED_ORIGINS=https://meusite.com,https://www.meusite.com

# Opção 3: Usar domínio gratuito
# DOMAIN=meusite.ddns.net
# ALLOWED_ORIGINS=https://meusite.ddns.net

# Grafana
GRAFANA_PASSWORD=admin123_change_this

# SSL (para desenvolvimento local)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Rate Limiting (otimizado para múltiplos usuários)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Backup
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Configurações de Performance
MAX_CONNECTIONS=200
SHARED_BUFFERS=256MB
WORK_MEM=4MB
MAINTENANCE_WORK_MEM=64MB

# WebSocket
WEBSOCKET_TIMEOUT=300000
WEBSOCKET_PING_INTERVAL=25000
WEBSOCKET_PING_TIMEOUT=60000

# Monitoramento
MONITORING_INTERVAL=5000
HEALTH_CHECK_INTERVAL=300000
